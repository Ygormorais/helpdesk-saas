# Server
PORT=3000
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb://localhost:27017/helpdesk

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Email (SMTP)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password

# AWS S3 (para uploads)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_BUCKET_NAME=
AWS_REGION=us-east-1

# Asaas (Pagamentos)
ASAAS_API_KEY=sua-chave-api-asaas
ASAAS_WEBHOOK_SECRET=seu-webhook-secret
# Use sandbox para testes: https://sandbox.asaas.com
# Use producao para real: https://www.asaas.com

# OpenAI (opcional, para busca com IA na Base de Conhecimento)
OPENAI_API_KEY=
OPENAI_BASE_URL=
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Ollama (recomendado para busca com IA gratis/local)
# Instale: https://ollama.com  |  Depois: ollama pull nomic-embed-text
AI_EMBEDDINGS_PROVIDER=ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_EMBEDDING_MODEL=nomic-embed-text
